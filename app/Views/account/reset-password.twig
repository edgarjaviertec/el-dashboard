{% extends "/layouts/base.twig" %}
{% block content %}

    <div class="row justify-content-md-center">
        <div class="col-12  col-md-8  col-xl-6">
            {% if flashMessages is defined %}
                {{ flashMessages|raw }}
            {% endif %}

            <div class="card">
                <div class="card-header">
                    Restablecer la contraseña
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ app.base_url }}/reset-password/{{ token }}">
                        <input type="hidden" name="id">


                        <div class="form-group">
                            <label for="email">Nueva contraseña</label>
                            <input type="text"
                                   class="form-control"
                                   id="password"
                                   name="password"
                                   {% if app.session.old.password %}value="{{ app.session.old.password }}"{% endif %} >
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Repetir nueva contraseña</label>
                            <input type="text"
                                   class="form-control"
                                   id="confirmPassword"
                                   name="confirmPassword"
                                   {% if app.session.old.password %}value="{{ app.session.old.confirmPassword }}"{% endif %} >
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary">Cambiar contraseña</button>
                        </div>


                        <div class="form-group text-center">
                            <a href="{{ app.base_url }}/login">Acceder</a> | <a
                                    href="{{ app.base_url }}/register">Registrarse</a>
                        </div>


                        <div class="text-center">
                            <i class="fa fa-arrow-left"></i> <a href="{{ app.base_url }}/">Ir a la página de inicio</a>
                        </div>


                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}