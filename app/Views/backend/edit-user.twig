{% extends "/layouts/Backend-base.twig" %}
{% block content %}
    <div class="mb-3">
        <h3 class="mb-0">
            <span>Editar usuario</span>
        </h3>
    </div>
    <div class="card bg-light">
        <div class="card-body">
            <form method="POST" action="/backend/users/update">
                <input type="hidden" name="id" value="{{ user.id }}">
                <div class="form-group">
                    <label for="name">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{ user.username }}"
                           required>
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
                </div>
                <div class="form-group">
                    <a href="/backend/users/{{ user.id }}/change-password" class="btn btn-secondary"><i
                                class="fas fa-user-shield"></i> Cambiar contraseña</a>
                </div>
                <div class="form-group">
                    <label for="role">Rol</label>
                    <select class="custom-select" id="role" name="role" required>
                        {% for role in roles %}
                            <option value="{{ role.id }}" {% if user.role_display_name == role.display_name %} selected {% endif %}>{{ role.display_name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <span class="d-block mb-2">Estado</span>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radio2" name="accountStatus" class="custom-control-input"
                               value="1" {% if user.account_status == 1 %} checked {% endif %} >
                        <label class="custom-control-label" for="radio2">Verificado</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radio1" name="accountStatus" class="custom-control-input"
                               value="0" {% if user.account_status == 0 %} checked {% endif %}>
                        <label class="custom-control-label" for="radio1">No verificado</label>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/backend/users" class="btn  btn-lg btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-lg btn-primary">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}